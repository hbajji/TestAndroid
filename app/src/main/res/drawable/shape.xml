<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#99cccccc" />
            <!--shadow Color-->
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_bg_white" />//Background Color
            <corners android:radius="4dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"></padding>
        </shape>
    </item>
</layer-list>